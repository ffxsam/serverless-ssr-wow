---
import axios from 'axios';
import Layout from '../../layouts/Layout.astro';
import type { Brewery } from '../../types';
import BreweryDetails from '../../components/BreweryDetails.astro';

export interface Props {
  id: string;
}

const { id } = Astro.params;

const response = await axios.get(import.meta.env.API_URL + `/breweries/${id}`);
const brewery: Brewery = response.data;
---

<Layout title={brewery.name}>
  <BreweryDetails brewery={brewery} />
</Layout>
