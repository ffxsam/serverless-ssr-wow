---
import axios from 'axios';
import type { Brewery } from '../types';
import SearchBox from './SearchBox.vue';

const response = await axios.get(import.meta.env.API_URL + '/breweries');
const breweries: Brewery[] = response.data;
---

<div>
  <div class="mb-10">
    <SearchBox />
  </div>
  <table class="min-w-full bg-white shadow-md rounded-lg">
    <thead>
      <tr class="text-gray-600 text-left bg-gray-200">
        <th class="px-4 py-3">Name</th>
        <th class="px-4 py-3">City</th>
        <th class="px-4 py-3">State</th>
      </tr>
    </thead>
    <tbody class="text-gray-700">
      {
        breweries.map((brewery) => (
          <tr class="border-b border-gray-200">
            <td class="px-4 py-3">
              <a href={`/brewery/${brewery.id}`}>{brewery.name}</a>
            </td>
            <td class="px-4 py-3">{brewery.city}</td>
            <td class="px-4 py-3">{brewery.state}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
